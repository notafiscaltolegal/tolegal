<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
      xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout"
      xmlns:data="https://github.com/mxab/thymeleaf-extras-data-attribute"
      layout:replace="templates/layout :: template">
<div layout:fragment="styles">
    <link rel="stylesheet" th:href="@{/css/plugins/jquery.datetimepicker.css}">
</div>

<div layout:fragment="content">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Relatório de Reclamações</h2>
        </div>
        <form id="formReclamacaoRel">

            <input type="hidden" id="dataRel" th:value="${data}"/>
            <input type="hidden" id="dataRelFim" th:value="${dataFim}"/>
            <input type="hidden" id="situacaoRel" th:value="${situacao}"/>
            <input type="hidden" id="motivoReclamacaoRel" th:value="${motivoReclamacao}"/>
            <input type="hidden" id="tipoDocFiscalReclamacaoRel" th:value="${tipoDocFiscalReclamacao}"/>
            <input type="hidden" id="recNoPrazoRel" th:value="${recNoPrazo}"/>


            <div class="row">
                <div class="col-md-3">
                    <h2>Filtros:</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <p style="display: inline-block" th:text="${'Data:'+data}" />
                </div>
                <div class="col-md-2">
                    <p style="display: inline-block" th:text="${'Data final:'+dataFim}" />
                </div>
                <div class="col-md-2">
                    <p style="display: inline-block" th:text="${'Nr.Situação:'+situacao}" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <p style="display: inline-block" th:text="${'Cód. Motivo:'+motivoReclamacao}" />
                </div>
                <div class="col-md-2">
                    <p style="display: inline-block" th:text="${'Cód. Tipo Doc.:'+tipoDocFiscalReclamacao}" />
                </div>
                <div class="col-md-2">
                    <p style="display: inline-block" th:text="${'Cód. Prazo:'+recNoPrazo}" />
                </div>
            </div>


            <br/><hr/><br/>


            <div class="panel-body centralizado"  style=" background:whitesmoke; padding-bottom: 0">
                <div  id="containerReclamacaoRel" class="table-responsive"></div>
            </div>
        </form>
    </div>
</div>

<div layout:fragment="scripts">
    <script th:src="@{/js/plugins/jquery.blockUI.js}"></script>
    <script th:src="@{/js/plugins/jquery.maskMoney.min.js}" charset="utf-8"></script>
    <script th:src="@{/js/plugins/jquery.datetimepicker.js}"></script>
    <!--<script th:src="@{/js/nfg-pagination.js}"></script>-->
    <!--<script th:src="@{/js/plugins/lodash.min.js}"></script>-->
    <!--<script th:src="@{/js/plugins/handlebars-v1.3.0.js}"></script>-->
    <!--<script th:src="@{/js/plugins/jquery-ui.js}"></script>-->
    <!--<script th:src="@{/js/helpers/handlebars.js}"></script>-->

    <!--<script th:src="@{/js/js.js}"></script>-->
    <!--<script th:src="@{/js/globals.js}"></script>-->
    <!--<script th:src="@{/js/paginate.js}" charset="utf-8"></script>-->
    <!--<script th:src="@{/js/generic-modal.js}" charset="utf-8"></script>-->
    <!--<script th:src="@{/js/dialogs.js}" charset="utf-8"></script>-->
    <script th:src="@{/js/relatorioReclamacao.js}" charset="utf-8"></script>

    <script type="text/javascript" th:inline="javascript" charset="utf-8">
        new RelatorioReclamacao();
    </script>
</div>

</html>