<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
      xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout"
      layout:replace="templates/layout :: template">

<div layout:fragment="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <label class="control-label">Listar Premiações</label>
            </div>
            <div class="col-lg-12">
                <form id="formPremiacao" name="premiacao" class="form-horizontal" action="/nfg/portal/premiacao/listarPremiacao" method="post">
                    <div class="row">
                        <div id="sorteio" class="col-md-2">
                            <label class="control-label" for="selectSorteios">SORTEIOS:</label>
                            <div>
                                <select class="form-control"  name="selectSorteios" id="selectSorteios" required="required" title="Selecione o sorteio.">
                                    <option value="">Selecione...</option>
                                    <option th:each="s : ${sorteios}" th:value="${s.id}" th:text="${s.informacao}"</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="clearfix">&nbsp;</div>
                <div class="row">
                    <div class="panel panel-default">
                        <table class="table table-striped table-responsive table-condensed" id="listPremiacoes">
                            <div class="panel-body dadosPremiacao" title="Premiação" style="overflow-x:auto">
                                <div id="containerPremiacao"></div>
                            </div>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div layout:fragment="scripts">
    <script th:src="@{/js/cnaes/paginate.js}"></script>
    <script th:src="@{/js/premiacaoPortal.js}" type="application/javascript" charset="ISO-8859-1"></script>
    <script type="text/javascript" th:inline="javascript" charset="utf-8">
        new PremiacaoPortal({
        });
    </script>
</div>
