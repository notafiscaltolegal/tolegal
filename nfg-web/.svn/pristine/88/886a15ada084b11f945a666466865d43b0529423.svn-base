<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app id="webapp_nfg" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>NFG - Nota Fiscal Goiana</display-name>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- PORTAL SEFAZ -->
    <servlet>
        <servlet-name>control</servlet-name>
        <servlet-class>gov.sefaz.controle.gerenciador.Controller</servlet-class>
        <init-param>
            <param-name>file.resource.loader.path</param-name>
            <param-value>/WEB-INF/views/templates-portalsefaz</param-value>
        </init-param>
        <init-param>
            <param-name>runtime.log</param-name>
            <param-value>control-pge.log</param-value>
        </init-param>
        <init-param>
            <param-name>control.sistema</param-name>
            <param-value>NFG</param-value>
        </init-param>
        <init-param>
            <param-name>control.package.controle</param-name>
            <param-value>gov.goias.controllers</param-value>
        </init-param>
        <init-param>
            <param-name>control.cache</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>control.debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>control.debug.log</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>control.seguranca</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>control.classe.startup</param-name>
            <param-value>gov.sefaz.controle.gerenciador.MontaMenu</param-value>
        </init-param>
    </servlet>
    <!-- Portal Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>control</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>
    <!-- Fim Portal -->

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
    </context-param>

    <!--########################################################-->
    <!--#                       Listeners                      #-->
    <!--########################################################-->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>gov.goias.listeners.CertificadoSessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>gov.goias.listeners.SessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>gov.goias.config.Boot</listener-class>
    </listener>
