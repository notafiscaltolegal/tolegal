    <!--########################################################-->
    <!--#                       Error Pages                    #-->
    <!--########################################################-->
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/errors/401</location>
    </error-page>
</web-app>