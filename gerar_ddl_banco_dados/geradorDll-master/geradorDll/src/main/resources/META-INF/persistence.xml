<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="gerarDll" transaction-type="RESOURCE_LOCAL">
    
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
      
      	<class>entidade.BilheteToLegal</class>
      	<class>entidade.EnderecoToLegal</class>
      	<class>entidade.NotaFiscalToLegal</class>
      	<class>entidade.PessoaFisicaToLegal</class>
      	<class>entidade.PontuacaoBonusToLegal</class>
		<class>entidade.PontuacaoToLegal</class>
		<class>entidade.SorteioCidadaoToLegal</class>
		<class>entidade.SorteioToLegal</class>
		<class>entidade.UsuarioToLegal</class>
		<class>entidade.MunicipioToLegal</class>
		<class>entidade.ReclamacaoToLegal</class>
		<class>entidade.ReclamacaoLogToLegal</class>
		<class>entidade.BloqueioCpfToLegal</class>
		<class>entidade.MensagemEmpresaToLegal</class>
		<class>entidade.MensagemVisualizadaEmpresaToLegal</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="create_db.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="drop_db.ddl"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:sampleJPALoadScriptSourceDB;create=true"/>
        </properties>
    </persistence-unit>

</persistence>        